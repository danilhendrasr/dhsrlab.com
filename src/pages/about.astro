import Layout from "../layouts/Layout.astro";
---

<Layout title="About Me | Danil Hendra Suryawan">
  <main class="my-32 max-w-[1200px] mx-auto flex flex-col gap-20">
    <section class="px-5 flex flex-col-reverse md:flex-row gap-20 md:gap-10">
      <div class="flex flex-col gap-5 w-full md:w-3/5">
        <h1 class="text-3xl font-bold">Hey there ðŸ‘‹</h1>
        <p class="font-semibold">
          I'm Danil Hendra Suryawan. You can call me Danil.
