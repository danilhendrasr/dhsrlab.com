---
import type React from "react";

interface Props {
  link: string;
  openInNewTab?: boolean;
  children: React.ReactNode;
}

const { link, openInNewTab = false } = Astro.props;
---

<a
  href={link}
  target={openInNewTab ? "_blank" : undefined}
  class="text-[#635bff] hover:text-[#635bff] w-fit relative"
>
  <slot />
</a>

<style>
  a::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 1px;
    background-color: #635bff;
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.3s;
  }

  a:hover::after {
    transform: scaleX(1);
  }
</style>
